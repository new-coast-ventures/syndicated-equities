<% if current_user.admin %>
	<%= render partial: "modal_form", doc: @doc %>
	<% if @master_admin %>
		<button type="button" class="table button" style="width: 150px ;background: transparent; color: #0E77D9; padding:15px" data-toggle="modal" data-target="#docu-form-modal">Add Document</button>
	<% end%>
<% end%>
<h5 class="dashboard-title">Form Library</h5>
<% if @forms.any? %>
	<table class="table table-bordered">
		<thead class="thead-default">
			<tr>
				<th>Form Name</th>
				<th>Date</th>
				<th>Link</th>
				<% if @master_admin %>
					<th></th>
					<th></th>
				<% end %>
			</tr>
		</thead>
		<tbody>
			<% @forms.each do |form| %>
				<tr>
					<td><%= form.title %></td>
					<td><%= form.created_at.strftime("%m/%d/%y") %></td>
					<td>                    
						<% if form&.document&.filename&.to_s&.downcase.include?('.pdf') %>
                      		<%= link_to "Download/View", rails_blob_path(form&.document), target: "_blank" %>
						<% else %>
							<%= link_to "Download/View", rails_blob_path(form&.document) %>
						<% end %>
					</td>
					<% if @master_admin %>
						<td>
							<%= link_to 'Edit',  '#', 'data-target' => "#myFormEditModal_#{form.id}", 'data-toggle' => 'modal'  %>
							<div class="modal fade" id='<%= "myFormEditModal_#{form.id}" %>' tabindex="-1" role="dialog" aria-labelledby="myFormModalLabel" aria-hidden="true">
							<div class="modal-dialog">
								<div class="modal-content" style="margin-top:100px">
								<div class="modal-header">
									<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
									<h4 class="modal-title" id="myModalLabel">Update Document</h4>
								</div>
								<div class="modal-body">
									<%= form_for form do |f| %>
										<fieldset class="form-group">
											<label>Title<span style="color:red">*</span></label>
											<%= f.text_field :title, value: form&.title %>
										</fieldset>

										<fieldset class="form-group">
											<label>File<span style="color:red">*</span></label>
											<%= form&.document&.filename %>
											<%= f.file_field :document %>
										</fieldset>

										<%= f.submit "Upload Document", class: "btn btn-primary", id: "submit" %>
									<% end %>
								</div>
								</div><!-- /.modal-content -->
							</div><!-- /.modal-dialog -->
							</div><!-- /.modal --> 
						</td>
						<td>
							<%= link_to "Delete", form_path(form.id), :method => :delete, data: {confirm: "Are you sure you want to delete this document?"} %>
						</td>
					<% end %>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
  <h5>No Forms to show </h5>
<% end %>