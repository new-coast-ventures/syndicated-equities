<!DOCTYPE html>
<html>
  <head>
    <title>SyndicatedEquities</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.16/js/dataTables.bootstrap4.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.16/css/dataTables.bootstrap4.min.css"/>
  </head>
  <body>

    <% if notice %>
      <div class="alert alert-info" role="alert"><%= notice %></div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger" role="alert"><%= alert %></div>
    <% end %>

    <nav class="navbar navbar-full navbar-dark bg-faded" style="background-color: #002849;">
      <button class="navbar-toggler hidden-lg-up float-xs-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"></button>
      <%= link_to '/', class: "navbar-brand" do %>
        <img src="<%= image_path('synequlogo.svg') %>" />
      <% end %>
      <div class="clearfix hidden-sm-up"></div>
      <% if current_user %>
        <div class="collapse navbar-toggleable-md" id="navbarResponsive">
          <ul class="nav navbar-nav">
            <li class="nav-item">
              <%= link_to "Dashboard", user_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Properties", properties_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Investors", users_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Edit Profile", edit_registration_path(current_user), class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Form Library", forms_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <span class="nav-text">Logged in as: <%= "#{current_user.first_name} #{current_user.last_name}" %></span>
            </li>
            <li class="nav-item float-md-right">
              <%= link_to "Log out", destroy_session_path(current_user), :method => :delete, class: "nav-link" %>
            </li>
          </ul>
        </div>
      <% end %>
    </nav>

    <div class="container">
      <%= yield %>
    </div>

    <footer class ="footer">
      <div class="container">
        <span class="text-muted">&copy; Syndicated Equities 2017 | <%= link_to 'Contact Us', contacts_path %></span>
      </div>
    </footer>
  </body>
</html>