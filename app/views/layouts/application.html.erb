<!DOCTYPE html>
<html>
<head>
  <title>SyndicatedEquities</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>
<body>
<% if notice %>
  <div class="alert alert-info" role="alert"><%= notice %></div>
<% end %>
<% if alert %>
  <div class="alert alert-danger" role="alert"><%= alert %></div>
<% end %>
<nav class="navbar navbar-full navbar-inverse bg-faded">
  <a class="navbar-brand" href="#"><img src="<%= image_path('synequlogo.svg') %>" /></a>
  <% if current_user %>
  <ul class="nav navbar-nav">
    <li class="nav-item">
      <%= link_to "Dashboard", user_path(current_user), class: "nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Edit Profile", edit_registration_path(current_user), class: "nav-link" %>
    </li>
    <li class="nav-item float-xs-right">
      <%= link_to "Log out", destroy_session_path(current_user), :method => :delete, class: "nav-link" %>
    </li>
  </ul>
  <% end %>
</nav>
<div class="container">
<%= yield %>
</div>
</body>
</html>
