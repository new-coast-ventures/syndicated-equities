<div class="container">
  <div class="card" style="width: 40rem; max-width:100%; margin:30px auto;">
    <div class="card-header">
      Forgot Your Password?
    </div>
    <div class="card-block">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-2 col-form-label col-form-label-md">Email</label>
          <div class="col-sm-10">
            <%= f.email_field :email, autofocus: true, class: "form-control form-control-md" %>
          </div>
        </div>

        <div class="actions">
          <%= f.submit "Send password reset instructions", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>