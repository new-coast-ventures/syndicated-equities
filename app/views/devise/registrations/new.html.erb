<style>
#error_explanation {
  padding-top: 10px;
  margin-bottom: 15px;
  border: 1px solid rgba(224,40,31,1);
  background: rgba(224,40,31,0.1);
}
#error_explanation h2 {
  display: none;
}
</style>
<div class="container">
  <div class="card" style="width: 40rem; max-width:100%; margin:30px auto;">
    <div class="card-header">
      Sign Up
    </div>
    <div class="card-block">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">First Name</label>
          <div class="col-sm-9">
            <%= f.text_field :first_name, autofocus: true, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">Last Name</label>
          <div class="col-sm-9">
            <%= f.text_field :last_name, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">Phone</label>
          <div class="col-sm-9">
            <%= f.text_field :phone, class: "form-control form-control-sm", maxlength: "13", minlength: "9", pattern: "[0-9]+" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">Address</label>
          <div class="col-sm-9">
            <%= f.text_field :address_1, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">Address 2</label>
          <div class="col-sm-9">
            <%= f.text_field :address_2, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">City</label>
          <div class="col-sm-9">
            <%= f.text_field :city, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">State</label>
          <div class="col-sm-9">
            <%= f.text_field :state, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">Country</label>
          <div class="col-sm-9">
            <%= f.text_field :country, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">Zip Code</label>
          <div class="col-sm-9">
            <%= f.text_field :zip_code, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">Email</label>
          <div class="col-sm-9">
            <%= f.email_field :email, class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">Password *
          </label>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "off", class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="form-group row">
          <label for="smFormGroupInput" class="col-sm-3 col-form-label col-form-label-sm">Confirm Password</label>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control form-control-sm" %>
          </div>
        </div>
        <div class="actions">
          <p class="legalese">By clicking the Sign Up button below, you are hereby agreeing to our <a href="https://drive.google.com/file/d/1gIPHIu0Wck_gAgFmIuxqxCGzTHYvItVl/view" target="_blank">Terms of Use.</a></p>
          <%= f.submit "Sign Up", class: "btn btn-primary my-1" %>
        </div>
        <%- if controller_name != 'sessions' %>
          <%= link_to "Log in", new_session_path(resource_name) %><br />
        <% end -%>
      <% end %>
    </div>
    <div class="card-footer">
      <span style="font-size:14px;">
        * Password must contain a minimum of 10 characters, including at least 1 uppercase letter, 1 lowercase letter, and 1 number
      </span>
    </div>
  </div>
</div>